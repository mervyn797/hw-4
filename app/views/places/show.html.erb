<h1 class="headers"><%= @place["name"] %></h1>

<h3 class ="headers">My Posts</h3>
<div class="container">
  <div class="row ">
    <% for post in @posts_currentuser %>
      <div class="col-md-4 col-sm-12 ">
        <h4><%= post["title"] %></h4>
        <h6><%= post["posted_on"] %></h6>
        <p><%= post["description"] %></p>
        <img src="<%= post["image"] %>" class="img-fluid">
      </div>
    <% end %>
  </div>
</div>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>